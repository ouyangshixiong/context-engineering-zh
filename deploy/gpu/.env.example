# CNN可视化教学项目 - GPU版本环境变量示例

# Jupyter配置
JUPYTER_ENABLE_LAB=yes
JUPYTER_PORT=8888

# Python路径
PYTHONPATH=/app

# 数据目录
DATA_DIR=/app/data
NOTEBOOK_DIR=/app/notebooks

# 日志级别
LOG_LEVEL=INFO

# GPU配置
NVIDIA_VISIBLE_DEVICES=all
CUDA_VISIBLE_DEVICES=0,1,2,3

# 内存限制
MEMORY_LIMIT=8g

# CPU限制
CPU_LIMIT=4

# 时区
TZ=Asia/Shanghai

# GPU内存限制（百分比）
GPU_MEMORY_LIMIT=0.8